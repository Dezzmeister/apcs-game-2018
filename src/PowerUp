public class PowerUp {
		
	boolean speedPU = false;
	boolean extrabeansPU = false;
	boolean immunePU = false;
	
	public PowerUp(boolean power1, boolean power2, boolean power3) {
		speedPU = power1;
		extrabeansPU = power2;
		immunePU = power3;
	}
	
	public void speedUp() {
		if(speedPU){
			while(speedPU) {
				
			}
		}
		else speedPU=false;
	}
	
	public void moreBeans() {
		if(extrabeansPU) {
			while(extrabeansPU) {
			
			}
		}
		else 
			extrabeansPU=false;
	}
	
	public void immunity() {
		if(immunePU) {
			while(immunePU){
				
			}
		}
		else
			immunePU=false;
	}
		
}
